{
    "type": "library",
    "license": "MIT",
    "name": "pierreboissinot/changelog-helper",
    "homepage": "https://github.com/pierreboissinot/changelog-helper",
    "description": "Helps you to manage changelog",
    "authors": [
        {
            "name": "Pierre Boissinot",
            "email": "perso@pierreboissinot.me"
        }
    ],
    "keywords": ["changelog"],
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "emlynwest/changelog": "^1.2",
        "symfony/console": "^3.0 || ^4.0",
        "symfony/finder": "^3.0 || ^4.0",
        "symfony/flex": "^1.0",
        "symfony/lock": "^3.0 || ^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "symfony/dotenv": "^4.1",
        "symfony/phpunit-bridge": "^4.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "bin": ["changelog-helper.php"],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {

        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
